{
    "name": "mtrgen-yaml-templates",
    "displayName": "MTRGen Templates Syntax Highlighting",
    "description": "Provides syntax support for YAML templates used by MTRGen (matronator/generator on composer).",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Other"
    ],
    "contributes": {
        "grammars": [
            {
                "path": "./syntaxes/injection.json",
                "scopeName": "variable.template.injection",
                "injectTo": ["source.yaml", "source.json", "source.neon"]
            }
        ]
    },
    "publisher": "Matronator",
    "author": {
        "name": "Matronator",
        "url": "https://matronator.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/matronator/vs-code-mtrgen-yaml-templates.git"
    },
    "badges": [],
    "galleryBanner": {
        "color": "#bb0000",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:yaml",
        "onLanguage:json",
        "onLanguage:neon"
    ],
    "keywords": [
        "yaml", "yaml template", "templates", "templating", "mtrgen", "matronator"
    ],
    "license": "LICENSE.md",
    "icon": "icon.png"
}
