{
    "scopeName": "variable.template.injection",
    "injectionSelector": "L:source.yaml, L:source.json, L:source.neon",
    "patterns": [
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "variables": {
            "patterns": [
				{
					"match": "\\<%\\s?[a-zA-Z0-9_]+?\\s?%\\>",
                    "name": "variable.name"
				}
			]
        }
    }
}
